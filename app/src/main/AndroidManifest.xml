<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Vacation Scheduling App"
        android:supportsRtl="true"
        android:theme="@style/Theme.D387project"
        tools:targetApi="31">
        <receiver
            android:name=".ui.MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".ui.VacationSchedulingApp"
            android:exported="true"
            android:label="Vacation Scheduling App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.VacationList"
            android:exported="false"
            android:label="Vacation List"
            android:parentActivityName=".ui.VacationSchedulingApp" />
        <activity
            android:name=".ui.VacationDetails"
            android:exported="false"
            android:label="Vacation Details"
            android:parentActivityName=".ui.VacationList" />
        <activity
            android:name=".ui.ExcursionDetails"
            android:exported="false"
            android:label="Excursion Details"
            android:parentActivityName=".ui.VacationDetails" />
    </application>

</manifest>